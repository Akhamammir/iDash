/* You can add global styles to this file, and also import other style files */
sidebar = #2130B8
whitey = #FDFDFD
.nb-theme-corporate nb-layout .layout .highlightCol
  background sidebar !important

img
  object-fit: contain;
  display: block;
  margin-left: auto;
  margin-right: auto;

.fullPrimeButton
  width 100%

.columns
  margin-top 20px

.subheader
  position fixed !important
  width 85vw
  z-index 99
  box-shadow rgba(0, 0, 0, 0.16) 0px 3px 6px,
   rgba(0, 0, 0, 0.23) 0px 3px 6px !important

.nb-theme-corporate nb-layout-header nav
  height 3rem !important

.nb-theme-corporate nb-layout-header.fixed ~ .layout-container
  padding-top  2.5rem !important

.nb-theme-corporate nb-layout .layout .layout-container .content .columns nb-layout-column
  padding 0.5rem !important

.nb-theme-corporate nb-sidebar
  background sidebar !important
  box-shadow rgba(0, 0, 0, 0.16) 0px 3px 6px,
   rgba(0, 0, 0, 0.23) 0px 3px 6px !important

.nb-theme-corporate nb-sidebar .scrollable
  padding 1rem !important
  overflow-y hidden !important

.p-panelmenu .p-panelmenu-header > a
  background none !important
  border none !important
  border-radius 15px !important

.p-panelmenu .p-panelmenu-header > a:hover
  background rgba(255, 255, 255, 0.1) !important

.p-divider.p-divider-horizontal:before
  border-top-color white !important

.topdrop .p-dropdown
  background rgba(255, 255, 255, 0) !important
  border-left 0 !important
  border-radius 0px 125px 125px 0px !important
  border-color lighten(sidebar, 5) !important
  background sidebar !important
  margin: 0px !important;
.topdrop .p-inputtext
  color whitey !important

.topdropaddon.p-inputgroup-addon
  color whitey !important
  border-color lighten(sidebar, 5) !important
  border-radius 125px 0px 0px 125px !important

.centerbtn
  display block !important
  margin-left auto !important
  margin-right auto !important

.topsearch
  background #FFF !important
  color #252525 !important
  border-color #858585 !important
  border-radius 25px !important

.topdropaddon
  background sidebar !important

.darktxt
  color #858585 !important

.topdrop
  background #FFF !important

.main-container { top: 0px !important; }


.form-control-input
  background #DADDE3 !important;
  border 0px !important
  color: #262626 !important
  margin 10px 0px 10px 0px !important;
  padding 0.8em !important
  &:focus
    border 0px !important
.form-control-label
  color #828894 !important
  font-size: 12px !important
  font-weight  400 !important
.p-dropdown
  background #DADDE3 !important;
  border 0px !important
  padding 0.1em !important
  margin: 8px 0px 8px 0px !important;
.p-dropdown-panel
  background #bfbfbf !important;
  border 0px !important


.p-checkbox .p-checkbox-box
  background: #bfbfbf !important
  border 0px !important


.p-dropdown-panel .p-dropdown-items .p-dropdown-item
  color:#000000 !important
  font-weight: 500 !important
  font-size: 14px !important
.p-dropdown-panel .p-dropdown-items .p-dropdown-item.p-highlight
  color:#000000 !important
  font-weight: 500 !important
  font-size: 14px !important
  &:before
    background: #FB6340 !important

.p-inputtext
  color:#000000 !important
  font-weight: 500 !important
  font-size: 14px !important
.p-inputgroup-addon
  color:#000000 !important
  font-weight: 500 !important
  font-size: 14px !important

.label-button-warning
  color #FFFFFF !important
  font-size: 13px !important
  font-weight  700 !important


.p-steps-number
  background #6B7280 !important
.p-steps-title
  color:#3C4257 !important
  font-weight: 500 !important
  font-size: 18px !important
.form-control-input-feature
  background #DADDE3 !important;
  border 0px !important
  color: #262626 !important

.p-inputmask
  color:#3C4257 !important
.p-hidden-accessible input
  color:#3C4257 !important
